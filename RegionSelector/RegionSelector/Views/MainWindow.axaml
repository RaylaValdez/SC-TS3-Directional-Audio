<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="RegionSelector.Views.MainWindow"
    SystemDecorations="None"
    TransparencyLevelHint="AcrylicBlur,Blur,Transparent"
    Background="Transparent"
    CanResize="False"
    Topmost="True"
    ShowInTaskbar="False">
  <Canvas x:Name="RootCanvas" Background="#33000000">
    <!-- Selection rectangle -->
    <Border x:Name="Selection"
            BorderBrush="#FFFFFFFF"
            BorderThickness="2"
            Background="#40FFFFFF" />
    <!-- Instructions -->
    <TextBlock Text="Drag to move • Resize edges • Enter=Save • Esc=Cancel"
               Foreground="White"
               FontSize="14"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,8,0,0" />
  </Canvas>
</Window>
